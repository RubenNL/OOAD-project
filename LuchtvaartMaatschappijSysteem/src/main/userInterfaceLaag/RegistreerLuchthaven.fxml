<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="310.0" prefWidth="470.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.userInterfaceLaag.RegistreerLuchthavenController">
   <children>
      <HBox layoutX="30.0" layoutY="10.0" prefHeight="40.0" prefWidth="430.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="215.0">
               <children>
                  <Label text="Land">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="landComboBox" onAction="#landNaam" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="41.0" prefWidth="215.0">
               <children>
                  <TextField fx:id="naamTextfield" alignment="CENTER_RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Label text="Naam">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox layoutX="30.0" layoutY="50.0" prefHeight="40.0" prefWidth="430.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="215.0" spacing="50.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="140.0" text="Werkplaats">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <RadioButton fx:id="jaRadioButton" mnemonicParsing="false" text="Ja">
                           <toggleGroup>
                              <ToggleGroup fx:id="werkplaats" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="neeRadioButton" mnemonicParsing="false" text="Nee" toggleGroup="$werkplaats" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="41.0" prefWidth="215.0">
               <children>
                  <TextField fx:id="codeTextfield" alignment="CENTER_RIGHT">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Label text="Code">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </HBox>
      <Button fx:id="buttonOK" layoutX="307.0" layoutY="274.0" mnemonicParsing="false" onAction="#ok" prefHeight="30.0" prefWidth="70.0" text="OK" />
      <Button fx:id="buttonCancel" layoutX="390.0" layoutY="274.0" mnemonicParsing="false" onAction="#cancel" prefHeight="30.0" prefWidth="70.0" text="Cancel" />
   </children>
</AnchorPane>
